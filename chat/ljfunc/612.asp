<%'江湖動刑
function dongxin(fn1,to1,toname)
if info(2)<8 then
	Response.Write "<script language=JavaScript>{alert('江湖動刑需要8級以上管理員操作！');}</script>"
	Response.End
end if
if toname="大家" or toname=info(0) then
	Response.Write "<script language=JavaScript>{alert('動刑對像有錯，請看仔細了！！');}</script>"
	Response.End
exit function
end if
Set conn=Server.CreateObject("ADODB.CONNECTION")
Set rs=Server.CreateObject("ADODB.RecordSet")
conn.open Application("ljjh_usermdb")
rs.open "select grade,體力,內力 FROM 用戶 WHERE 姓名='"&toname&"'",conn
if info(2)<rs("grade") then
	Response.Write "<script language=JavaScript>{alert('不可以對高級管理員操作!');}</script>"
	rs.close
	set rs=nothing	
	conn.close
	set conn=nothing
	Response.End
end if
if rs("體力")<1000 then
	Response.Write "<script language=JavaScript>{alert('對方已經沒有體力了就快要死了就算了吧!');}</script>"
	rs.close
	set rs=nothing	
	conn.close
	set conn=nothing
	Response.End
end if
if rs("內力")<1000 then
	Response.Write "<script language=JavaScript>{alert('對方已經沒有內力了就算了吧!');}</script>"
	rs.close
	set rs=nothing	
	conn.close
	set conn=nothing
	Response.End
end if
conn.execute "update 用戶 set 體力=體力-1000,內力=內力-1000 where 姓名='"&toname&"'"
if info(5)<>"官府" then
dongxin= info(0) &"[便衣聊管]:<font color=red><bgsound src=wav/daipu.wav loop=1>由於" & toname & "在江湖中違反規則,官府決定對其動用靈劍刑罰，" & toname & "因此大傷元氣損失體力1000，內力1000!</font>"
else
dongxin= info(0) &"[官府人員]:<font color=red><bgsound src=wav/daipu.wav loop=1>由於" & toname & "在江湖中違反規則,官府決定對其動用靈劍刑罰，" & toname & "因此大傷元氣損失體力1000，內力1000!</font>"
end if 
rs.close
	set rs=nothing	
	conn.close
	set conn=nothing
end function
%>
